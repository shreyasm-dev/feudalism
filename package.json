{
  "name": "feudalism",
  "version": "1.0.0",
  "description": "Turn your code into a fiefdom",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/**/*.txt dist",
    "run": "node dist/main.js",
    "build:watch": "tsc --watch",
    "run:watch": "nodemon dist/main.js --watch dist",
    "start": "npm-run-all --parallel build:watch run:watch",
    "start:once": "npm run build && npm run run",
    "prepublishOnly": "npm run build && npm run test",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/*.ts'"
  },
  "keywords": [],
  "author": "shreyasm-dev",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/node": "^18.11.18",
    "acorn": "^8.8.1",
    "commander": "^9.5.0",
    "source-map-support": "^0.5.21"
  }
}
